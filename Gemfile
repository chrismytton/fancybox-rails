source 'http://rubygems.org'

gem 'rails', '>= 3.1.0'

gem 'sqlite3'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', ">= 3.1.0"
  gem 'coffee-rails', ">= 3.1.0"
  gem 'uglifier'
end

gem 'jquery-rails'

group :test do
  # Pretty printed test output
  gem 'turn', :require => false
  gem 'minitest'
  gem 'capybara'
  gem 'poltergeist'
end
